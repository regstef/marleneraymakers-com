# marleneraymakers.com Environment Variables
# Copy this file to .env.local for development

# === Public Variables (exposed to client) ===

# Strapi CMS URL (without trailing slash)
PUBLIC_STRAPI_URL=http://localhost:1337

# Stripe publishable key
PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Cloudinary cloud name for image optimization
PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# Plausible Analytics domain (optional, for production)
PUBLIC_PLAUSIBLE_DOMAIN=marleneraymakers.com

# === Private Variables (server-side only) ===

# Database connection (for future use)
DATABASE_URL=postgresql://user:password@localhost:5432/marleneraymakers

# Stripe secret key (server-side)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Stripe webhook secret for validating webhook events
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Brevo (SendinBlue) API key for transactional emails
BREVO_API_KEY=your_brevo_api_key

# Cloudinary API credentials (server-side)
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# === Development Variables ===

# Enable debug mode (development only)
DEBUG=false

# API Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# === Optional Variables ===

# Google Tag Manager ID (optional)
PUBLIC_GTM_ID=

# Facebook Pixel ID (optional)
PUBLIC_FB_PIXEL_ID=

# === Feature Flags ===

# Enable/disable features
FEATURE_NEWSLETTER=true
FEATURE_REVIEWS=false
FEATURE_WISHLIST=false